@model AuctionLand.Web.Startup

@{
    ViewBag.Title = "Index";
}

<!-- START content-->
<div class="container" id="ContainerMaxWidth980">

    <!-- START main image and bid time-->
    <div class="row">
        <img src="~/Images/home1.jpg" class="img-responsive" />
    </div>
    <div class="row" id="belowMainImage">
        <!-- bid end date-->
        <div class="col-xs-3 text-center">
            <p>5/6/2014</p>
        </div>
        <!-- bid end time-->
        <div class="col-xs-3 text-center">
            <p>12:00 pm</p>
        </div>
        <!-- time left to bid in Days:Hours:Minutes-->
        <div class="col-xs-6 text-center">
            <p>21:02:21</p>
        </div>
    </div>
    <!-- END main image and bid time-->
    <!-- START second row of content-->
    <div class="row">

        <!-- START bidding price section-->
        <div class="col-sm-6">
            <a href="#" class="list-group-item list-group-item-info"><h4><img src="~/Images/USD-512.png" id="myIconsLg"> Bidding</h4></a>
            <div class="panel-body">
                Starting Bid
                <p id="boldText"> Current Bid</p>
            </div>
        </div>
        <!-- END bidding price section-->
        <!-- START Map section-->
        <div class="col-sm-6" id="contentWithPadding">
            <a href="#" class="list-group-item list-group-item-info"><h4><img src="~/Images/marker-512.png" id="myIconsMd"> Location</h4></a>
            <div class="panel-body">
                <p>123 Street Name</p>
                <p>City, State ZipCode</p>
            </div>
        </div>
        <!-- END Map section-->

    </div>
    <!-- END second row of content-->
    <!-- START bathroom bedroom sizes -->

    <div class="row"id="BathroomBedroomSizeSection">
        <ul class="list-inline col-sm-10 col-md-12">
            
            <li class="navbar-text"><a href="http://www.facebook.com"><img src="~/Images/bedroom.png" id="BathroomBedroomSizeIcons" /> 
                                        <span class="hidden-xs">Bathrooms: </span> 4 </a></li>
            <li class="navbar-text"><a href="http://www.facebook.com"><img src="~/Images/bathroom.png" id="BathroomBedroomSizeIcons" /> <span class="hidden-xs">Bedroom: </span> 2 </a></li>
            <li class="navbar-text"><a href="http://www.facebook.com"><img src="~/Images/property.png" id="BathroomBedroomSizeIcons" /> <span class="hidden-xs">Property: </span> 2,506 Sq Ft </a></li>
            <li class="navbar-text"><a href="http://www.facebook.com"><img src="~/Images/measure.png" id="BathroomBedroomSizeIcons" /> <span class="hidden-xs">Lot: </span> 0.71 acres  </a></li>
            <li class="navbar-text"><a href="http://www.facebook.com"><img src="~/Images/yearBuilt.png" id="BathroomBedroomSizeIcons" style="max-width: 22px"/> <span class="hidden-xs">Built: </span> 1978 </a></li>
        </ul>
    </div>
    <!-- END bathroom bedroom sizes -->

   
    <!-- END second row of content-->

    <!-- START social media links-->
    <div class="btn-group" id="socialMediaSection">
        <ul class="list-inline">
            <li><a href="http://www.facebook.com"><img src="~/Images/facebook-512.png" class="img-responsive" id="myIconsMd" /></a></li>
            <li><a href="http://www.google.com"><img src="~/Images/Share.png" class="img-responsive" id="myIconsMd" /></a></li>
        </ul>
    </div>
    <!-- END social media links--> 
</div>
<!-- END content-->
