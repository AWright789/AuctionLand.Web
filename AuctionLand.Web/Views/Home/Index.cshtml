@model AuctionLand.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Auction Land";
}

<!-- start HOME PAGE with FEATURED HOMES and collection of HOMES FOR SALE -->
<div class="container" id="ContainerMaxWidth900">
    <div class="text-center">

        <!-- START Featured Homes -->
        <h2 style="color:red">Featured Homes</h2>
        @foreach (var featuredHome in Model.FeaturedHomes)
        {
       <a href="@Url.Action("Index","RealEstate", new { id = featuredHome.Id})">
        <div class="col-sm-4 border" id="featuredHomeCell">
            <div class="homeThumbnailImage" style="background-image:url(@featuredHome.DefaultImageUrl)">

            </div>
                 Featured Home @featuredHome.Street
            <div class="col-sm-12">
                <p id="currentBidFeatured">@featuredHome.StartingBid.ToString("C")</p>
                <img src="~/Images/bedroom.png" id="propertyDetailIcons" />@featuredHome.Bedrooms
                <img src="~/Images/bathroom.png" id="propertyDetailIcons" /> @featuredHome.Bathrooms
                <img src="~/Images/property.png" id="propertyDetailIcons" />@featuredHome.EstateSize.ToString("N0") Sq Ft
                <img src="~/Images/yearBuilt.png" id="propertyDetailIcons" style="max-width: 22px" />@featuredHome.YearBuilt
            </div>
        </div>
       </a>
        }
        <!-- END Featured Homes -->

        <div class="row" id="dividerSpace"></div>

        <div id="real-estate-list">
            <h2 style="color:gray">Homes For Sale</h2>
            @Html.DisplayFor(m => m.HomesForSale)
        </div>

    </div>
</div>
<!-- end HOME PAGE of FEATURED HOMES AND HOMES FOR SALE -->

